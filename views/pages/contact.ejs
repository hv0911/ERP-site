  <div class="main">

    <div class="heading">
      <h3>Add Contact</h3>
    </div>
  <form action="/contact" method="post">
    <div class="form-row">
      
      <div class="form-group col-md-4">
        <label for="contact_type">Contact Type*</label>
        <select id="contact_type" class="form-control" name="contact_type">
          <option selected>Choose...</option>
          <option>Customer</option>
          <option>Supplier</option>
        </select>
      </div>
      <div class="form-group col-md-4">
        <label for="inputEmail4">Name*</label>
        <input type="text" class="form-control" id="inputText4" placeholder="Name" name="name">
      </div>
      <div class="form-group col-md-4">
        <label for="inputEmail4">Email*</label>
        <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="email">
      </div>
      <div class="form-group col-md-4">
        <label for="inputNumber4">Mobile no</label>
        <input type="number" class="form-control" id="inputNumber4" placeholder="Mobile no" name="mobile_no">
      </div>
      <div class="form-group col-md-4">
        <label for="taxNumber4">Tax Number</label>
        <input type="text" class="form-control" id="taxNumber4" placeholder="Tax Number" name="tax_number">
      </div>

      <div class="form-group col-md-4">
        <label for="inputPassword4">Alt Contact no:</label>
        <input type="number" class="form-control" id="inputNumber4" placeholder="Alt Contact no:" name="alt_mobile_no">
      </div>
      <div class="form-group col-md-4">
        <label for="inputEmail4">Business Name</label>
        <input type="name" class="form-control" id="inputText4" placeholder="Name" name="business_name">
      </div>
      <div class="form-group col-md-4">
        <label for="inputPassword4">Password</label>
        <input type="password" class="form-control" id="inputPassword4" placeholder="Password" name="password">
      </div>
     
    </div>
    <div class="form-group">
      <label for="inputAddress">Address</label>
      <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="address">
    </div>
